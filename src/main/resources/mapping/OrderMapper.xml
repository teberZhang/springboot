<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.OrderMapper">

    <resultMap id="BaseResultMap" type="com.example.springboot.entity.Order">
        <result column="order_id" jdbcType="INTEGER" property="order_id"/>
        <result column="order_sn" jdbcType="VARCHAR" property="order_sn"/>
        <result column="doctor_id" jdbcType="INTEGER" property="doctor_id"/>
        <result column="user_id" jdbcType="INTEGER" property="user_id"/>
        <result column="total_fee" jdbcType="DECIMAL" property="total_fee"/>
        <result column="status" jdbcType="VARCHAR" property="status"/>
        <result column="create_at" jdbcType="TIMESTAMP" property="create_at"/>
        <result column="update_at" jdbcType="TIMESTAMP" property="update_at"/>
    </resultMap>

    <select id="Sel" resultType="com.example.springboot.entity.Order">
        select * from `order` where 1=1
        <if test="order.orderSn != null">
            AND order_sn = #{order.orderSn}
        </if>
        <if test="order.status != null">
            AND status = #{order.status}
        </if>
        limit 1
    </select>

    <update id="UpdateById" parameterType="com.example.springboot.entity.Order">
        UPDATE `order`
        <set>
            <if test="order.status != null">
                status = #{order.status},
            </if>
        </set>
        WHERE
        id=#{adminUser.id}
    </update>


    <select id="SelectAllAdminUserByPageHelper" resultType="com.example.springboot.entity.Order" parameterType="com.example.springboot.common.form.OrderListForm">
        select * from `order` where 1=1
        <if test="queryParam.userId != null">
            AND user_id = #{queryParam.userId}
        </if>
    </select>


</mapper>